<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4D94FF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2.5pt"
        android:background="@drawable/button_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5pt"
            android:gravity="center"
            android:layout_marginLeft="3.5pt"
            android:layout_marginRight="3.5pt"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4pt"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="31dp"
                        android:layout_height="8pt"
                        app:srcCompat="@drawable/icon_map" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Station:"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/Tv_Station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STAOUELI TIPAZA"
                    android:textColor="#EBDD5331"
                    android:layout_marginLeft="2pt"
                    android:layout_marginTop="2pt"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4pt"
                android:layout_weight="0"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Date:"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Tv_Date"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginRight="5pt"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10/10/2010 12:45"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="19dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_brail" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2pt"
                    android:layout_weight="0"
                    android:text="Quantité GPL:"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Tv_GPL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200 L"
                    android:textColor="#22C827"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3pt"
            android:layout_marginTop="5pt"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="5pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:layout_marginRight="2pt"
                android:layout_weight="0"
                app:srcCompat="@drawable/icon_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Total à payer :"
                android:textColor="#8B000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_prix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6pt"
                android:layout_weight="0"
                android:paddingLeft="2pt"
                android:text="9400 Da"
                android:textColor="#FFC107"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3.5pt"
            android:layout_marginTop="4pt"
            android:layout_marginBottom="4pt"

            android:layout_weight="0"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_edit_db"
                android:layout_width="wrap_content"
                android:layout_height="17pt"
                android:layout_marginBottom="3pt"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:text="Edit BL" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>