<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_ground_client"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/imageView9"
           android:layout_width="17pt"
           android:layout_height="17pt"
           android:layout_gravity="center"
           android:layout_marginLeft="7pt"
           android:layout_weight="0"
           app:srcCompat="@drawable/warning" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginLeft="3pt"
           android:layout_marginTop="3pt"
           android:layout_marginRight="3pt"
           android:layout_marginBottom="3pt"
           android:gravity="center"
           android:text="Êtes-vous sûr de vouloir supprimer cette client ?"
           android:textColor="#CC6619"
           android:textSize="16sp"
           android:textStyle="bold" />
   </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_weight="0"
            android:background="@color/primary_blue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="0"
                app:srcCompat="@drawable/icon_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="adresse:"
                android:textColor="#EB000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/adresse_Client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="3pt"
            android:gravity="center"
            android:text="AV COLONEL AMIROUCHE BEK"
            android:textColor="#EBDD5331"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_weight="0"
        android:background="@color/primary_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="5pt"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="13pt"
            android:layout_height="13pt"
            android:layout_gravity="center"
            android:layout_marginRight="2pt"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_client" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5pt"
            android:gravity="center"
            android:text="Client_ID:"
            android:textColor="#3D7FB8"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="25 T"
            android:textColor="#359765"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_weight="0"
        android:background="@color/primary_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="5pt"
        android:layout_weight="0"
        android:gravity="center">

        <Button
            android:id="@+id/bu_sortir"
            android:layout_width="wrap_content"
            android:layout_height="15pt"
            android:layout_marginRight="7pt"
            android:layout_weight="0"
            android:background="@drawable/rv_background"
            android:backgroundTint="#F13131"
            android:text="Non" />

        <Button
            android:id="@+id/bu_envoyer"
            android:layout_width="wrap_content"
            android:layout_height="15pt"
            android:layout_marginLeft="7pt"
            android:layout_weight="0"
            android:background="@drawable/rv_background"
            android:backgroundTint="#35E15B"
            android:text="Oui" />

    </LinearLayout>

</LinearLayout>