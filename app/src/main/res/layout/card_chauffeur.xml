<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_ground_chauffeur"
    android:layout_margin="2pt"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="13pt"
            android:layout_height="13pt"
            android:layout_gravity="center"
            android:layout_marginRight="2pt"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_client" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5pt"
            android:gravity="center"
            android:text="Chauffeur_ID :"
            android:textColor="#3D7FB8"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Chauffeur_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="NAFT_09146121"
            android:textColor="#359765"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_weight="0"
        android:background="@color/colorAccent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="1pt"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="Nom :"
                android:textColor="#3D7FB8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Nom_Chauffeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="MAZZOUZ"
                android:textColor="#A4000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="1pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5pt"
                    android:gravity="center"
                    android:text="Prénom :"
                    android:textColor="#3D7FB8"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Prenom_Chauffeur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5pt"
                    android:gravity="center"
                    android:text="Hocine"
                    android:textColor="#A4000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_weight="0"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    app:srcCompat="@drawable/icon_map"
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:layout_marginRight="2pt"
                    android:layout_weight="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5pt"
                    android:gravity="center"
                    android:text="adresse:"
                    android:textColor="#EB000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:id="@+id/adresse_Chauffeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3pt"
                android:layout_marginBottom="3pt"
                android:gravity="center"
                android:text="Rue Mouloud Feraoun, cité 08 mai , Dar El Beida, Alger"
                android:textColor="#EBDD5331"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>



        </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_weight="0"
        android:background="@color/colorAccent" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="5pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5pt"
            android:gravity="center"
            android:text="Num Permis :"
            android:textColor="#3D7FB8"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Permis_Chauffeur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="12894510"
            android:textColor="#AF2DE6"
            android:textSize="20sp"
            android:textStyle="bold" />

        </LinearLayout>

</LinearLayout>