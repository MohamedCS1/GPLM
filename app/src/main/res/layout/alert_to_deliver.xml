<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rv_background"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5pt"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginBottom="5pt"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="16pt"
                    android:layout_height="16pt"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/warning" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Si vous appuyez sur Oui, vous confirmez que cette commande a été livrée."
                    android:textColor="#EBDD5331"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="#EA7A30">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="2pt"
                android:layout_marginRight="3pt"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:layout_marginRight="2pt"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/icon_map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5pt"
                    android:gravity="center"
                    android:text="cette station:"
                    android:textColor="#EB000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/to_do_adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:gravity="center"
                android:text="AV COLONEL AMIROUCHE BEK"
                android:textColor="#EBDD5331"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="3pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="13pt"
                android:layout_height="13pt"
                android:layout_gravity="center"
                android:layout_marginRight="2pt"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_brail" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="Quantité GPL:"
                android:textColor="#3D7FB8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/to_do_gpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="25"
                android:textColor="#359765"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="T"
                android:textColor="#359765"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3pt"
            android:layout_marginTop="5pt"
            android:layout_marginRight="3pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Date :"
                android:textColor="#65A8D3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/to_do_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="2pt"
                android:text="27-06-2021 15:38:21"
                android:textColor="#706136"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3pt"
            android:layout_marginTop="5pt"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="5pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:layout_marginRight="2pt"
                android:layout_weight="0"
                app:srcCompat="@drawable/icon_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Total à payer :"
                android:textColor="#8B000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/to_do_prix_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6pt"
                android:layout_weight="0"
                android:paddingLeft="2pt"
                android:text="9400 Da"
                android:textColor="#FFC107"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="7pt"
            android:layout_weight="0"
            android:gravity="center">

            <Button
                android:id="@+id/bu_no"
                android:layout_width="wrap_content"
                android:layout_height="15pt"
                android:layout_marginRight="9pt"
                android:layout_weight="0"
                android:background="@drawable/rv_background"
                android:backgroundTint="#F18431"
                android:text="annuler" />


            <Button
                android:id="@+id/bu_oui"
                android:layout_width="wrap_content"
                android:layout_height="15pt"
                android:layout_marginLeft="9pt"
                android:layout_weight="0"
                android:background="@drawable/rv_background"
                android:backgroundTint="#35E15B"
                android:text="Oui" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>