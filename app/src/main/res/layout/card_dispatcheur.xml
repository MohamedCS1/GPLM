<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:background="@drawable/rv_background"
    android:layout_margin="2pt"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="13pt"
            android:layout_height="13pt"
            android:layout_gravity="center"
            android:layout_marginRight="2pt"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_client" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5pt"
            android:gravity="center"
            android:text="Dispatcheur_ID:"
            android:textColor="#3D7FB8"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Dispatcheur_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="NAFT_15596559"
            android:textColor="#359765"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_weight="0"
        android:background="#EA7A30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="1pt"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="Nom :"
                android:textColor="#3D7FB8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Nom_Dispatcheur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="MAZZOUZ"
                android:textColor="#A4000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="1pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5pt"
                    android:gravity="center"
                    android:text="PrÃ©nom :"
                    android:textColor="#3D7FB8"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Prenom_Dispatcheur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5pt"
                    android:gravity="center"
                    android:text="Hocine"
                    android:textColor="#A4000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_weight="0"
        android:background="#EA7A30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="15pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="0"
                app:srcCompat="@drawable/icon_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5pt"
                android:gravity="center"
                android:text="adresse:"
                android:textColor="#EB000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/Adresse_Dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:gravity="center"
            android:text="AV COLONEL AMIROUCHE BEK"
            android:textColor="#EBDD5331"
            android:textSize="16sp"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>



