<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rv_admin">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bu_add_rv_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="5pt"
        android:backgroundTint="@color/primary_blue"
        android:layout_marginBottom="5pt"
        android:elevation="6dp"
        android:foreground="@drawable/ic_add24"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="23pt"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F49B9B">

        <EditText
            android:id="@+id/edit_search_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_search_24"
            android:ems="10"
            android:gravity="center"
            android:hint="rechercher"

            android:inputType="text" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="2pt"
        android:layout_marginTop="3.5pt"
        android:layout_weight="20"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/ic_clear" />

</FrameLayout>