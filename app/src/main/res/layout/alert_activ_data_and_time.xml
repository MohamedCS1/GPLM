<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chpass_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="7pt"
        app:srcCompat="@drawable/warning" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3pt"
        android:layout_marginTop="3pt"
        android:layout_marginRight="3pt"
        android:gravity="center"
        android:text="Pour utiliser cette application\n la date et l'heure \ndoivent être activées\n en mode"
        android:textColor="#77000000"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3pt"
        android:layout_marginRight="3pt"

        android:layout_marginBottom="3pt"
        android:gravity="center"
        android:text="automatique"
        android:textColor="#F8456BB6"
        android:textSize="13pt"
        android:textStyle="bold">

    </TextView>

    <ImageButton
        android:id="@+id/bu_settings"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8pt"

        android:background="@drawable/settings"
        android:gravity="center" />

</LinearLayout>